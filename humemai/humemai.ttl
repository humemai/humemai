@prefix humemai: <https://humem.ai/ontology/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Define the base class for Memory
humemai:Memory a owl:Class ;
    rdfs:label "Memory" ;
    rdfs:comment "A base class for all types of memories." .

# Define ShortTermMemory as a subclass of Memory
humemai:ShortTermMemory a owl:Class ;
    rdfs:subClassOf humemai:Memory ;
    rdfs:label "Short-term Memory" ;
    rdfs:comment "A memory associated with a currentTime qualifier." .

# Define LongTermMemory as a subclass of Memory
humemai:LongTermMemory a owl:Class ;
    rdfs:subClassOf humemai:Memory ;
    rdfs:label "Long-term Memory" ;
    rdfs:comment "A memory that persists over time, without the currentTime qualifier." .

# Define EpisodicMemory as a subclass of LongTermMemory
humemai:EpisodicMemory a owl:Class ;
    rdfs:subClassOf humemai:LongTermMemory ;
    rdfs:label "Episodic Memory" ;
    rdfs:comment "A long-term memory that involves specific events, times, locations, and emotions." .

# Define SemanticMemory as a subclass of LongTermMemory
humemai:SemanticMemory a owl:Class ;
    rdfs:subClassOf humemai:LongTermMemory ;
    rdfs:label "Semantic Memory" ;
    rdfs:comment "A long-term memory related to factual knowledge or concepts." .

# Define currentTime as a property
humemai:currentTime a owl:DatatypeProperty ;
    rdfs:domain humemai:Memory ;
    rdfs:range xsd:dateTime ;
    rdfs:label "Current Time" ;
    rdfs:comment "The current time associated with a short-term memory." .

# Define other qualifiers (location, time, emotion, derivedFrom, etc.)
humemai:time a owl:DatatypeProperty ;
    rdfs:domain humemai:EpisodicMemory ;
    rdfs:range xsd:dateTime ;
    rdfs:label "Time" ;
    rdfs:comment "The time at which the episodic memory occurred." .

humemai:location a owl:DatatypeProperty ;
    rdfs:domain humemai:EpisodicMemory ;
    rdfs:range xsd:string ;
    rdfs:label "Location" ;
    rdfs:comment "The location associated with the memory." .

humemai:emotion a owl:DatatypeProperty ;
    rdfs:domain humemai:EpisodicMemory ;
    rdfs:range xsd:string ;
    rdfs:label "Emotion" ;
    rdfs:comment "The emotion associated with the memory." .

humemai:derivedFrom a owl:DatatypeProperty ;
    rdfs:domain humemai:SemanticMemory ;
    rdfs:range xsd:string ;
    rdfs:label "Derived From" ;
    rdfs:comment "The source from which the semantic memory was derived." .

humemai:strength a owl:DatatypeProperty ;
    rdfs:domain humemai:SemanticMemory ;
    rdfs:range xsd:integer ;
    rdfs:label "Strength" ;
    rdfs:comment "The strength of the memory." .

# Use OWL restrictions to define rules
# A ShortTermMemory must have a currentTime
humemai:ShortTermMemory owl:equivalentClass [
    a owl:Class ;
    owl:intersectionOf (
        humemai:Memory
        [ a owl:Restriction ;
          owl:onProperty humemai:currentTime ;
          owl:minCardinality 1
        ]
    )
] .

# An EpisodicMemory must have a time, location, and emotion
humemai:EpisodicMemory owl:equivalentClass [
    a owl:Class ;
    owl:intersectionOf (
        humemai:LongTermMemory
        [ a owl:Restriction ;
          owl:onProperty humemai:time ;
          owl:minCardinality 1
        ]
        [ a owl:Restriction ;
          owl:onProperty humemai:location ;
          owl:minCardinality 1
        ]
        [ a owl:Restriction ;
          owl:onProperty humemai:emotion ;
          owl:minCardinality 1
        ]
    )
] .

# A SemanticMemory must have derivedFrom and strength
humemai:SemanticMemory owl:equivalentClass [
    a owl:Class ;
    owl:intersectionOf (
        humemai:LongTermMemory
        [ a owl:Restriction ;
          owl:onProperty humemai:derivedFrom ;
          owl:minCardinality 1
        ]
        [ a owl:Restriction ;
          owl:onProperty humemai:strength ;
          owl:minCardinality 1
        ]
    )
] .
